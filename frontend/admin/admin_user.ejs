<main class="section">
	<% if(messages.error){ %>
	<section class="featured section" id="shop">
		<h2 class="section-title">SEARCH USER</h2>

		<div class="featured_container bd-grid">
			<div class="form-search">
				<form action="/admin/users/search" method="get">
					<input type="text" name="q" class="search" value="<%= messages.q %>" placeholder="Email">
					<input type="submit" class="btn-search" value="Search">
				</form>
			</div>
			<p><%= messages.error %></p>
		</div>
	</section>
	<% }else if(messages.q){ %>
	<div class="admin-wrapper">
		<div class="item left-sidebar">
			<ul>
				<li><a href="/admin/users">Manage User</a></li>
				<li><a href="/admin/products">Manage Product</a></li>
				<li><a href="/admin/orders">Manage Order</a></li>
			</ul>
		</div>
		<div class="item admin-content">
			<% if(messages.error){ %>
			<small id="err"><%= messages.error %> </small>
			<% }else{ %>
			<div class="content">
				<h2 class="section-title">SEARCH USER</h2>
				<div class="form-search">
					<form action="/admin/users/search" method="get">
						<input type="text" name="q" class="search" value="<%= messages.q %>" placeholder="Email">
						<input type="submit" class="btn-search" value="Search">
					</form>
				</div>
				<table class="admin-table">
					<thead>
						<th>ID</th>
						<th>Email</th>
						<th>Name</th>
						<th>Action</th>
					</thead>
					<tbody>
						<% records.forEach(user => { %>
						<tr>
							<td><%= user._id %> </td>
							<td><%= user.email %></td>
							<td><%= user.name %></td>
							<td>
								<form action="/admin/deleteuser/<%= user._id %>?_method=DELETE" method="POST">
									<input type="submit" class="btn-action-delete" value="Delete">
								</form>
							</td>
						</tr>
						<% }); %>
					</tbody>
				</table>
			</div>
			<div class="book_pages bd-grid">
				<div>
					<% if(page>1){ %>
					<span class="book_pag"><a href="?page=<%= page-1 %>"><i class='bx bxs-chevron-left'></i></a></span>
					<% } %>
					<% for(var i = 1; i <= totalPages; i++){ %>
					<% if(i != page){ %>
					<% if(i>page-3&&i<page+3){ %>
					<span class="book_pag"><a href="?page=<%= i %>"><%= i %> </a></span>
					<% } %>
					<% }else{ %>
					<span class="book_pag"><a href=""><%= i %></a></span>
					<% } %>
					<% } %>
					<% if(page<totalPages-2){ %>
					<span class="book_pag"><a href="?page=<%= page+1 %>"><i class='bx bxs-chevron-right'></i></a></span>
					<% } %>
				</div>
			</div>
			<% } %>
		</div>
	</div>
	</div>

	<% }else{ %>
	<div class="admin-wrapper">
		<div class="item left-sidebar">
			<ul>
				<li><a href="/admin/users">Manage User</a></li>
				<li><a href="/admin/products">Manage Product</a></li>
				<li><a href="/admin/orders">Manage Order</a></li>
			</ul>
		</div>
		<div class="item admin-content">
			<% if(messages.error){ %>
			<small id="err"><%= messages.error %> </small>
			<% }else{ %>
			<div class="content">
				<h2 class="section-title">MANAGE USER</h2>
				<div class="form-search">
					<form action="/admin/users/search" method="get">
						<input type="text" name="q" class="search" value="<%= messages.q %>" placeholder="Email">
						<input type="submit" class="btn-search" value="Search">
					</form>
				</div>
				<table class="admin-table">
					<thead>
						<th>ID</th>
						<th>Email</th>
						<th>Name</th>
						<th>Action</th>
					</thead>
					<tbody>
						<% records.forEach(user => { %>
						<tr>
							<td><%= user._id %> </td>
							<td><%= user.email %></td>
							<td><%= user.name %></td>
							<td>
								<form action="/admin/deleteuser/<%= user._id %>?_method=DELETE" method="POST">
									<input type="submit" class="btn-action-delete" value="Delete">
								</form>
							</td>
						</tr>
						<% }); %>
					</tbody>
				</table>
			</div>
			<div class="book_pages bd-grid">
				<div>
					<% if(page>1){ %>
					<span class="book_pag"><a href="?page=<%= page-1 %>"><i class='bx bxs-chevron-left'></i></a></span>
					<% } %>
					<% for(var i = 1; i <= totalPages; i++){ %>
					<% if(i != page){ %>
					<% if(i>page-3&&i<page+3){ %>
					<span class="book_pag"><a href="?page=<%= i %>"><%= i %> </a></span>
					<% } %>
					<% }else{ %>
					<span class="book_pag"><a href=""><%= i %></a></span>
					<% } %>
					<% } %>
					<% if(page<totalPages-2){ %>
					<span class="book_pag"><a href="?page=<%= page+1 %>"><i class='bx bxs-chevron-right'></i></a></span>
					<% } %>
				</div>
			</div>
			<% } %>
		</div>
	</div>
	</div>
	<% } %>
</main>